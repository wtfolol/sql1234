<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ws.sql1234.MainMenu"
    android:orientation="vertical"
    android:background="@drawable/bg3">

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSearch"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnLogout"
        android:onClick="gLogout" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/btnGCsSearch"
        android:layout_marginTop="56dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Search book "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSearch"
        android:layout_marginTop="71dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="18dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="By Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GSearch"
        android:id="@+id/btnSearch"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/tvSearch"
        android:layout_alignParentStart="true" />

    <Button
        android:text="By Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGCsSearch"
        android:onClick="GCSearch"
        android:layout_alignBaseline="@+id/btnSearch"
        android:layout_alignBottom="@+id/btnSearch"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSearch"
        android:layout_alignStart="@+id/tvSearch"
        android:id="@+id/tvusername" />

</RelativeLayout>
