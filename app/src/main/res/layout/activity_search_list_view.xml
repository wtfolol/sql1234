<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ws.sql1234.SearchListView"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/bg4">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etSearch"
        android:layout_alignRight="@+id/btnSearch"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/etSearch" />

    <Button
        android:text="Search"
        android:layout_height="wrap_content"
        android:onClick="OnSearch"
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/etSearch"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Type the book that you wish to search:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="gback" />

</RelativeLayout>
